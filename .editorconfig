root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{Makefile,*.mk}]
indent_style = tab
indent_size = 8

[*.{sh,tf,tfvars,hcl}]
indent_size = 2

[*.md]
indent_size = unset

[.terraform.lock.hcl]
indent_size = unset
